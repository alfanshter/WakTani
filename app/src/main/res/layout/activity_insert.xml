<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnUpload"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/baris1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Nama Sayuran"
                    android:textColor="#000"
                    android:textSize="24dp"

                    />

                <TextView
                    android:id="@+id/nama_makanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Nama Produk"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/edt_nama"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_4"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Nama Deksripsi"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/edt_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_4"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Nutrisi dan Manfaat"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/edt_manfaat"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_4"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Cara Penyimpanan"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/edt_penyimpanan"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_4"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Harga"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/edt_harga"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_4"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Stok Produk"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/edt_stok"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_4"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Satuan Produk"
                    android:textSize="14dp"

                    />

                <RadioGroup
                    android:id="@+id/radio_satuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/radia_kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Kg" />

                    <RadioButton
                        android:id="@+id/radio_gram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gram" />

                    <RadioButton
                        android:id="@+id/radio_pack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pack" />

                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Kategori Produk"
                    android:textSize="14dp"

                    />

                <Spinner
                    android:id="@+id/spinner_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Status Produk"
                    android:textSize="14dp"

                    />

                <Spinner
                    android:id="@+id/spinner_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_waktu"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_4"
                    android:inputType="number"
                    android:hint="Waktu PreOrder"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/baris1"
                    android:layout_gravity="center"

                    >

                    <ImageView
                        android:id="@+id/gambar_makanan"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/rectangle_1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <io.fotoapparat.view.CameraView
                            android:id="@+id/btn_foto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/camera" />

                        <ImageView
                            android:id="@+id/btn_galery"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/galery" />


                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>



    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:background="@color/hijau"
        android:layout_height="wrap_content"
        android:text="TAMBAHKAN"
        android:id="@+id/btnUpload"
        android:fontFamily="@font/alef_bold"
        android:textColor="@color/putih"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>